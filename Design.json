{
    "design_system": {
      "name": "Didasko Learning Platform Design System",
      "version": "1.0.0",
      "description": "A comprehensive design system for educational technology platforms with emphasis on accessibility, engagement, and modern aesthetics",
      
      "color_palette": {
        "primary": {
          "yellow": "#FFD700",
          "yellow_light": "#FFF4A3",
          "yellow_bright": "#FFE55C"
        },
        "secondary": {
          "orange": "#FF8C42",
          "orange_light": "#FFB68A",
          "peach": "#FFCAB0"
        },
        "neutrals": {
          "background_light": "#F8F6F3",
          "background_cream": "#FFF8F0",
          "background_purple_light": "#E8E4FF",
          "background_mint": "#E0F7FA",
          "white": "#FFFFFF",
          "gray_light": "#F5F5F5",
          "gray_medium": "#888888",
          "gray_dark": "#666666",
          "black": "#000000"
        },
        "accent": {
          "purple": "#8B5CF6",
          "mint": "#4ECDC4",
          "blue": "#3B82F6"
        }
      },
      
      "typography": {
        "primary_font": "Inter, system-ui, -apple-system, sans-serif",
        "headings": {
          "font_weight": "800-900",
          "line_height": "1.1-1.2",
          "letter_spacing": "-0.02em"
        },
        "hero_heading": {
          "font_size": "clamp(2.5rem, 8vw, 4rem)",
          "font_weight": "900",
          "text_transform": "uppercase",
          "line_height": "0.9"
        },
        "section_heading": {
          "font_size": "clamp(1.8rem, 4vw, 2.5rem)",
          "font_weight": "800",
          "text_transform": "uppercase"
        },
        "body": {
          "font_size": "1rem-1.125rem",
          "line_height": "1.6",
          "font_weight": "400"
        },
        "small_text": {
          "font_size": "0.875rem",
          "line_height": "1.4"
        }
      },
      
      "spacing": {
        "base_unit": "8px",
        "scale": ["4px", "8px", "16px", "24px", "32px", "48px", "64px", "96px", "128px"],
        "container_max_width": "1200px",
        "section_padding": "80px 0",
        "element_gap": "24px"
      },
      
      "components": {
        "buttons": {
          "primary": {
            "background": "yellow (#FFD700)",
            "color": "black",
            "padding": "12px 24px",
            "border_radius": "4px",
            "border": "2px solid black",
            "font_weight": "600",
            "text_transform": "none",
            "hover_state": "slight_scale_transform"
          },
          "secondary": {
            "background": "transparent",
            "color": "black",
            "border": "2px solid black",
            "padding": "12px 24px",
            "border_radius": "4px"
          }
        },
        
        "cards": {
          "feature_card": {
            "background": "colored_backgrounds",
            "border": "2px solid black",
            "border_radius": "8px",
            "padding": "24px",
            "shadow": "none",
            "layout": "vertical_stack"
          },
          "dashboard_card": {
            "background": "white",
            "border": "1px solid #E5E5E5",
            "border_radius": "8px",
            "padding": "20px",
            "shadow": "subtle"
          }
        },
        
        "navigation": {
          "header": {
            "background": "transparent",
            "padding": "16px 24px",
            "border_bottom": "none",
            "layout": "flex_space_between"
          },
          "nav_links": {
            "font_weight": "500",
            "color": "black",
            "spacing": "32px",
            "hover_state": "underline"
          }
        },
        
        "forms": {
          "input": {
            "border": "2px solid black",
            "border_radius": "4px",
            "padding": "12px 16px",
            "background": "white",
            "font_size": "1rem"
          },
          "faq_accordion": {
            "border": "2px solid black",
            "border_radius": "4px",
            "background": "white",
            "padding": "16px",
            "margin_bottom": "8px"
          }
        },
        
        "dashboard_elements": {
          "sidebar": {
            "background": "dark",
            "width": "240px",
            "padding": "24px"
          },
          "chart_container": {
            "background": "white",
            "border": "1px solid #E5E5E5",
            "border_radius": "8px",
            "padding": "20px"
          },
          "progress_indicator": {
            "circular": true,
            "colors": ["mint", "orange", "blue"],
            "stroke_width": "8px"
          },
          "leaderboard": {
            "background": "white",
            "border": "1px solid #E5E5E5",
            "item_padding": "12px",
            "avatar_size": "32px"
          }
        }
      },
      
      "layout_patterns": {
        "hero_section": {
          "structure": "centered_content",
          "background": "light_neutral",
          "padding": "80px 0",
          "text_alignment": "center",
          "elements": ["badge", "hero_heading", "description", "cta_buttons"]
        },
        
        "feature_grid": {
          "structure": "css_grid",
          "columns": "repeat(auto-fit, minmax(300px, 1fr))",
          "gap": "24px",
          "padding": "48px 0"
        },
        
        "two_column_layout": {
          "structure": "50_50_split",
          "gap": "48px",
          "alignment": "center",
          "responsive": "stack_on_mobile"
        },
        
        "dashboard_layout": {
          "structure": "sidebar_main_content",
          "sidebar_width": "240px",
          "main_padding": "24px",
          "header_height": "64px"
        },
        
        "faq_section": {
          "structure": "single_column",
          "max_width": "800px",
          "centered": true,
          "item_spacing": "8px"
        }
      },
      
      "visual_style": {
        "aesthetic": "modern_brutalist",
        "characteristics": [
          "bold_typography",
          "high_contrast",
          "geometric_shapes",
          "bright_accent_colors",
          "clean_lines",
          "minimal_shadows"
        ],
        "borders": {
          "style": "solid",
          "width": "2px",
          "color": "black",
          "radius": "4-8px"
        },
        "shadows": {
          "usage": "minimal",
          "style": "subtle_box_shadow",
          "color": "rgba(0,0,0,0.1)"
        },
        "animations": {
          "hover_effects": "subtle_scale_transform",
          "transitions": "0.2s ease",
          "loading_states": "simple_fade"
        }
      },
      
      "content_structure": {
        "page_sections": [
          {
            "type": "hero",
            "elements": ["logo", "navigation", "hero_content", "cta"]
          },
          {
            "type": "features",
            "elements": ["section_heading", "feature_grid", "visual_examples"]
          },
          {
            "type": "benefits",
            "elements": ["problem_statement", "solution_cards", "statistics"]
          },
          {
            "type": "how_it_works",
            "elements": ["step_by_step", "visual_flow", "screenshots"]
          },
          {
            "type": "social_proof",
            "elements": ["testimonials", "integrations", "statistics"]
          },
          {
            "type": "faq",
            "elements": ["common_questions", "accordion_interface"]
          },
          {
            "type": "cta_footer",
            "elements": ["newsletter_signup", "final_cta", "footer_links"]
          }
        ]
      },
      
      "dashboard_components": {
        "layout": "sidebar_navigation",
        "main_sections": [
          "overview_dashboard",
          "course_management",
          "student_progress",
          "analytics",
          "settings"
        ],
        "data_visualization": {
          "charts": ["bar_charts", "progress_circles", "line_graphs"],
          "colors": ["orange", "mint", "blue", "purple"],
          "style": "clean_minimal"
        },
        "interactive_elements": {
          "course_cards": "grid_layout",
          "progress_tracking": "circular_progress",
          "leaderboards": "ranked_list",
          "activity_feed": "timeline_format"
        }
      },
      
      "responsive_design": {
        "breakpoints": {
          "mobile": "< 768px",
          "tablet": "768px - 1024px",
          "desktop": "> 1024px"
        },
        "mobile_adaptations": {
          "navigation": "hamburger_menu",
          "hero_text": "smaller_scale",
          "feature_grid": "single_column",
          "dashboard": "collapsible_sidebar"
        }
      },
      
      "accessibility": {
        "contrast_ratio": "WCAG_AA_compliant",
        "focus_indicators": "visible_outline",
        "color_usage": "not_sole_indicator",
        "font_sizes": "minimum_16px",
        "interactive_elements": "minimum_44px_touch_target"
      },
      
      "brand_personality": {
        "tone": "confident_approachable",
        "voice": "educational_empowering",
        "visual_mood": "energetic_professional",
        "key_attributes": [
          "trustworthy",
          "innovative",
          "user_focused",
          "results_driven"
        ]
      }
    }
  }